{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [ "**/*.spec.ts" ]
}
